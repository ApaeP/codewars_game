<div class="container">
  <% if user_signed_in? %>
    <br>
    <h1 style="margin: 0;">Codewars user - <%= current_user.codewars_nickname %></h1>
    <h4>katas complet√©s : <%= current_user.katas.count %></h4>
    <br>

    <br>
    <%= will_paginate @katas unless @katas.empty? %>
    <br>
    <div class="katas-container">
      <% @katas.each do |kata| %>
        <%= render 'katas/kata_card', kata: kata %>
      <% end %>
    </div>
