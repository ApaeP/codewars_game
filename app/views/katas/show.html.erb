<div class="kata-container">
  <h1 class="kata-title"><%= @kata.title %></h1>
  <div class="kata-infos">
    <div class="kata-info">
      level <%= @kata.level_name %>
    </div>
  </div>
  <hr>
  <div>
    <%= simple_format @kata.code_description %>
    <hr>
    <% if current_user.has_solution_for(@kata) %>
      <p>vos solutions</p>
      <% current_user.solutions_for(@kata).each do |sol| %>
        <p><%= sol.language.capitalize %></p>
        <p><%= sol.html_content %></p>
      <% end %>
    <% end %>
    <hr>
    <% if current_user.has_friends_who_completed(@kata) %>
      <p>Friends who completed this kata</p>
      <% current_user.friends_who_completed(@kata).each do |friend| %>
        <hr style="width: 33vw;">
        <%= friend.full_name %>
        <br>
        <% friend.solutions_for(@kata).each do |sol| %>
          <p><%= sol.language.capitalize %></p>
          <p><%= sol.html_content %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<style type="text/css">
  .kata-container {
    width: 70vw;
    margin: 0 auto;
    color:  white;
    line-height: 1.7rem;
  }

  .kata-title {
    text-align: center;
  }

  .kata-infos {
    width: 100%;
    display: flex;
    flex-wrap:  wrap;
  }

  .kata-info {

  }
</style>

