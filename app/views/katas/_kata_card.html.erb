<div class="kata-card" style="background: <%= kata.color %>;">
  <div class="kata-card-infos">
    <%= kata.level_text %> | <%= kata.title %> - <em><%= kata.solutions.count %> solutions</em>

  </div>
  <div class="kata-card-ctas">
    <%= link_to "build", build_kata_path(kata), method: :patch unless kata.built %>
  </div>
</div>

